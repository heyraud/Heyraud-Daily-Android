<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.heyraud.daily.android">

    <application
        android:name=".HTApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".window.WindowActivity" />

        <activity android:name=".binder.BinderActivity" />

        <activity android:name=".document.DocumentProviderActivity" />

        <service
            android:name=".binder.RemoteService"
            android:process=":remote" />
    </application>

</manifest>