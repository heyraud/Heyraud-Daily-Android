<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.github.thismj.android">

    <application
        android:name="io.github.thismj.android.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="io.github.thismj.android.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="io.github.thismj.android.samples.window.WindowActivity"
            android:screenOrientation="sensor" />

        <activity
            android:name="io.github.thismj.android.binder.BinderActivity"
            android:screenOrientation="sensor" />

        <activity
            android:name="io.github.thismj.android.samples.document_provider.DocumentProviderActivity"
            android:screenOrientation="sensor" />

        <activity
            android:name="io.github.thismj.android.samples.constraint_layout.ConstraintLayoutActivity"
            android:screenOrientation="sensor" />

        <activity
            android:name="io.github.thismj.android.samples.recycler_view.RecyclerViewActivity"
            android:screenOrientation="sensor" />

        <activity
            android:name="io.github.thismj.android.samples.view_pager.ViewPagerActivity"
            android:screenOrientation="sensor" />

        <service
            android:name="io.github.thismj.android.binder.RemoteService"
            android:process=":salary" />
    </application>

</manifest>