<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.heyraud.daily.android">

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".samples.window.WindowActivity"
            android:screenOrientation="sensor" />

        <activity
            android:name=".binder.BinderActivity"
            android:screenOrientation="sensor" />

        <activity
            android:name=".samples.document_provider.DocumentProviderActivity"
            android:screenOrientation="sensor" />

        <activity
            android:name=".samples.constraint_layout.ConstraintLayoutActivity"
            android:screenOrientation="sensor" />

        <activity
            android:name=".samples.recycler_view.RecyclerViewActivity"
            android:screenOrientation="sensor" />

        <service
            android:name=".binder.RemoteService"
            android:process=":salary" />
    </application>

</manifest>